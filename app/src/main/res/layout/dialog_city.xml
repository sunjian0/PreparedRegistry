<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp">
<!--TODO 修改样式-->
        <com.example.administrator.preparedregistry.widget.WheelView
            android:id="@+id/dialog_city_province"
            android:layout_width="100dp"
            android:layout_toLeftOf="@+id/dialog_city_city"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            />

        <com.example.administrator.preparedregistry.widget.WheelView
            android:id="@+id/dialog_city_city"
            android:layout_width="100dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
             />

        <com.example.administrator.preparedregistry.widget.WheelView
            android:id="@+id/dialog_city_district"
            android:layout_width="100dp"
            android:layout_toRightOf="@id/dialog_city_city"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            />


    </RelativeLayout>


</LinearLayout>
